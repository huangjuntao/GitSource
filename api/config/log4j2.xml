<?xml version="1.0" encoding="UTF-8"?>
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<Properties>
		<Property name="LOG_HOME">${sys:catalina.home}/logs/
		</Property>
		<Property name="LOG_NAME">api.log</Property>
	</Properties>
	<!-- ===================================================================== -->
	<!-- 以下是appender的定义，定义日志输出的目的地、输出方式及过滤级别 -->
	<!-- ===================================================================== -->
	<appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{yyyy-MM-dd HH:mm:ss} %-5level [%file:%line] - %msg%n" />
		</Console>
		<RollingFile name="log" fileName="${LOG_HOME}/${LOG_NAME}"
			filePattern="${LOG_HOME}/${LOG_NAME}.%d{yyyy-MM-dd}" append="true">
			<PatternLayout
				pattern="%d{yyyy-MM-dd HH:mm:ss}   %-5level [%thread][%file:%line] - %msg%n" />
			<Policies>
				<TimeBasedTriggeringPolicy modulate="true"
					interval="1" />
			</Policies>
			<DefaultRolloverStrategy max="180" />
		</RollingFile>
	</appenders>
	<loggers>
		<root level="INFO">
			<appender-ref ref="Console" />
			<appender-ref ref="log" />
		</root>
	</loggers>
</log4j:configuration>